{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "packages/functions",
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run production",
    "ignore": ["src/", "test/", "node_modules/"]
  },
  "emulators": {
    "functions": {
      "port": "5000"
    }
  },
  "hosting": {
    "cleanUrls": true,
    "trailingSlash": false,
    "public": "static",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/apiSa/**",
        "function": "apiSa"
      },
      {
        "source": "/auth/**",
        "function": "auth"
      },
      {
        "source": "/authSa/**",
        "function": "authSa"
      },
      {
        "source": "/embed/**",
        "destination": "/embed.html"
      },
      {
        "source": "**",
        "destination": "/standalone.html"
      }
    ],
    "headers": [
      {
        "source": "sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ]
      }
    ]
  }
}
